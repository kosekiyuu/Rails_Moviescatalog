#2014/02/18 02:55
#http://morizyun.github.io/blog/better-error-gem-rails-ruby-rack/
group :development do
  # エラー画面をわかりやすく整形してくれる
  gem 'better_errors'
  # better_errorsの画面上にirb/pry(PERL)を表示する
  gem 'binding_of_caller'

  #http://www.ohmyenter.com/?p=70
  gem 'rack-mini-profiler'

  gem 'rails-erd'
end


